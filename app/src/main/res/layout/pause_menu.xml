<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/overlayed_bg"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pause_Text"
        android:text="Pause"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="80dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/btn_resume"
        android:background="@drawable/bt_resume"
        android:layout_alignLeft="@+id/btn_exit"
        android:layout_alignBottom="@+id/btn_exit"
        android:layout_marginBottom="120dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/btn_exit"
        android:background="@drawable/bt_exit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/btn_reset"
        android:background="@drawable/bt_reset"
        android:layout_alignLeft="@+id/btn_options"
        android:layout_alignBottom="@+id/btn_options"
        android:layout_marginBottom="120dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/btn_options"
        android:background="@drawable/bt_options"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
