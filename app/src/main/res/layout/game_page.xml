<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <kahwei.com.dm2230_mgp.GamePanelSurfaceView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/game_view"
            android:layout_gravity="center" >
        </kahwei.com.dm2230_mgp.GamePanelSurfaceView>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:singleLine="false"
            android:background="@drawable/menu_button"
            android:id="@+id/pause_button"
            android:text="||" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:id="@+id/PauseMenu"
        android:weightSum="1.0"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:id="@+id/PauseMenuBlank"
            android:layout_weight="0.6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="PAUSED"
                android:id="@+id/textView"
                android:layout_alignParentTop="false"
                android:textAlignment="center"
                android:textSize="70dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentBottom="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_centerInParent="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:background="#5b9bd5"
            android:id="@+id/PauseMenuSeparator"
            android:layout_weight="0.02">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:background="#595959"
            android:id="@+id/PauseMenuComponents"
            android:layout_weight="0.38">

            <Button
                android:id="@+id/btn_resume"
                android:layout_width="148dp"
                android:layout_height="95dp"
                android:layout_alignParentRight="false"
                android:layout_marginRight="0dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:singleLine="false"
                android:background="@drawable/bt_resume"
                android:layout_gravity="right"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp" />

            <Button
                android:id="@+id/btn_quit"
                android:layout_width="148dp"
                android:layout_height="95dp"
                android:layout_alignParentRight="false"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:singleLine="false"
                android:background="@drawable/bt_exit"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_marginLeft="30dp" />

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="148dp"
                android:layout_height="95dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:singleLine="false"
                android:background="@drawable/bt_reset"
                android:layout_gravity="right"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="0dp" />

            <Button
                android:id="@+id/btn_options"
                android:layout_width="148dp"
                android:layout_height="95dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_marginTop="0dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:singleLine="false"
                android:background="@drawable/bt_options"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_marginLeft="0dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:id="@+id/ConfirmMenu"
        android:weightSum="1.0"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:id="@+id/ExitTopBlank"
            android:layout_weight="0.28">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:background="#5b9bd5"
            android:id="@+id/ConfirmMenuTopSeparator"
            android:layout_weight="0.02">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:id="@+id/ConfirmMenuComponents"
            android:background="#595959"
            android:layout_weight="0.3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Exit to Main Menu?"
                android:id="@+id/confirmMessage"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp" />

            <Button
                android:id="@+id/btn_confirmYes"
                android:layout_width="148dp"
                android:layout_height="95dp"
                android:layout_alignParentRight="false"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:singleLine="false"
                android:background="@drawable/back_button"
                android:layout_gravity="right"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="false"
                android:layout_marginLeft="20dp"
                android:text="Yes" />

            <Button
                android:id="@+id/btn_confirmNo"
                android:layout_width="148dp"
                android:layout_height="95dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="0dp"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:singleLine="false"
                android:background="@drawable/accept_button"
                android:layout_gravity="right"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_marginLeft="0dp"
                android:text="No"
                android:typeface="normal" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:background="#5b9bd5"
            android:id="@+id/ConfirmMenuBotSeparator"
            android:layout_weight="0.02">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:id="@+id/BotBlank"
            android:layout_weight="0.38">
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>